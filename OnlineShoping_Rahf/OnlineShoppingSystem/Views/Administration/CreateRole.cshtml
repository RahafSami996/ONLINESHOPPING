@model OnlineShoppingSystem.Models.DTOOnlineShopping.RoleDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create New Role";
}

<h2>Create New Role</h2>
<hr />
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="CreateRole" asp-controller="Administration" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            
            <br />
            <br />
            <div class="form-group">
               
                <button type="submit" class="btn btn-primary">Creatr Role</button>



            </div>
        </form>

    </div>
</div>
@section Scripts {
    <partial name="_Validation" />
}
