@*@model IQueryable<IdentityUser>*@
@model IQueryable<OnlineShoppingSystem.Models.User>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ALl Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a asp-controller="Login" asp-action="Register"
       class="btn btn-primary mb-3" style="width:auto">
        Add New User
    </a>
    <table class="table table-bordered table-striped table-hover" style="color:darkviolet">
        <thead>
            <tr>

                <th>
                    User Name
                    @*@Html.DisplayNameFor(model => model.UserName)*@
                </th>
                <th>
                    phone
                    @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
                </th>
                <th>
                    Email
                    @*@Html.DisplayNameFor(model => model.Email)*@
                </th>
                
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.PasswordHash)
                        </td>*@
                    @*<td>
                            @if (item.ImageUrl != null)
                            {
                                <img src="~/Uploads/@item.ImageUrl" style="width:64px;" class="img-thumbnail" />
                            }
                        </td>*@
                    <td>
                        <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post">
                            <a asp-action="EditUser" asp-controller="Administration"
                               asp-route-id="@item.Id" class="btn btn-primary">Edit</a>

                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>


}
else
{
    <div class="card">
        <div class="card-header">
            No User Crated Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use The button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Login" asp-action="Register">
                Add new user
            </a>
        </div>

    </div>
}
@section Scripts {
    <partial name="_Validation" />
}


