@*@model IEnumerable<OnlineShoppingSystem.Models.DTOOnlineShopping.ProductDTO>*@
@model OnlineShoppingSystem.Models.DTOOnlineShopping.ProductDTO

@{
    ViewData["Title"] = "ListProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/twitter-bootstrap/css/bootstrap-grid.min.css" rel="stylesheet" />
<link href="~/lib/twitter-bootstrap/css/bootstrap-reboot.min.css" rel="stylesheet" />
<h2>List Product</h2>

<p>
    <a asp-action="CreateProduct" class="btn btn-primary">Create New</a>
</p>
@if (Model != null)
{
<div class="row">


    @foreach (var item in Model.Listproduct)
    {
    <div class="col-md-4">
        <div class="card">

            <div class="card-header">
                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
            </div>
            @if (item.ListOfImage != null)
            {
                @foreach (var item2 in item.ListOfImage)
                {
                    @*<img src="~/Images/@item2.Name" class="card-img-top" />*@
                    <img src="data:'@item2.ContentType';base64,@Convert.ToBase64String(item2.Data)" class="card-img-top" />


                }
            }
            @*@if (Model.Image != null)
        {
            <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Image)" width="150" height="100" />

        }*@
            <div class="card-footer text-center">

                <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-action="DeleteProdect" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

            </div>

        </div>
    </div>
    }
</div>

    }
