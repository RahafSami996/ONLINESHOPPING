<!-- Modal -->
     @{ 
         var product = ViewBag.Product;

     }
                @if (product != null)
                {
                   
                        <div class="modal-header">
                            <h1>@product.ProductName</h1> 
                        </div>
                        <div class=form-group>
                            <h2>Price:</h2>
                            <div>
                                <h4>@product.Price</h4>
                            </div>
                            <div class=form-group>
                                <h2>Type:</h2>

                                <div>
                                    <h4>@product.Type</h4>
                                </div>

                            </div>

                            <div class=form-group>
                                <h2>Season:</h2>

                                <div>
                                    
                                    <h4>@product.Seasons</h4>
                                </div>

                            </div>
                        </div>
                    
                }
               

         